gaps top 51
# gaps bottom 51

# smart_gaps on
# smart_borders on
border_radius 8 

# Font for window titles. Will also be used by the bar unless a different font
# is used in the bar {} block below.
font pango:JetBrainsMono 8

# This font is widely installed, provides lots of unicode glyphs, right-to-left
# text rendering and scalability on retina/hidpi displays (thanks to pango).
# font pango:DejaVu Sans Mono 8

# The combination of xss-lock, nm-applet and pactl is a popular choice, so
# they are included here as an example. Modify as you see fit.

# xss-lock grabs a logind suspend inhibit lock and will use i3lock to lock the
# screen before suspend. Use loginctl lock-session to lock your screen.
exec --no-startup-id xss-lock -l ~/.config/personal/lock_screen.sh

# NetworkManager is the most popular way to manage wireless networks on Linux,
# and nm-applet is a desktop environment-independent system tray GUI for it.
exec --no-startup-id nm-applet

# Custom Programs
exec --no-startup-id ~/.config/i3/scripts/system_startup.sh
exec --no-startup-id picom --config ~/.config/picom/picom.conf

# force floating for all new windows
for_window [class="[.]*"] floating enable

# Auto-floating programs
# for_window [instance="generic_selector"] floating enable
# for_window [class="MATLAB R2021a - academic use"] floating enable

for_window [class="MATLAB R2021a - academic use" title="MATLAB R2021a - academic use"] floating disable
for_window [class="firefoxdeveloperedition" window_role="browser"] floating disable
for_window [class="Code"] floating disable

# Audio Controls with amixer and playerctl
bindsym XF86AudioRaiseVolume exec --no-startup-id amixer set Master 2%+
bindsym XF86AudioLowerVolume exec --no-startup-id amixer set Master 2%-
bindsym XF86AudioMute exec --no-startup-id amixer set Master toggle

bindsym XF86AudioPlay exec --no-startup-id playerctl play-pause
bindsym XF86AudioPrev exec --no-startup-id playerctl previous
bindsym XF86AudioNext exec --no-startup-id playerctl next

bindsym $mod+Shift+p exec --no-startup-id playerctl play-pause
bindsym $mod+Shift+k exec --no-startup-id xbacklight -dec 5
bindsym $mod+Shift+l exec --no-startup-id xbacklight -inc 5

# Use Mouse+$mod to drag floating windows to their wanted position
floating_modifier $mod

